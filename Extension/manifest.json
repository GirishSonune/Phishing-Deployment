{
  "manifest_version": 3,
  "name": "Aegis Phishing Detector",
  "version": "1.3",
  "description": "Shows an indicator on text fields and selected text.",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://phishing-backend-api-ghb2abdha5fsadbb.canadacentral-01.azurewebsites.net/*",
    "http://127.0.0.1:5000/*",
    "https://smishing-backend-api-arandsfxhwcxaxc4.canadacentral-01.azurewebsites.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "Aegis Phishing Detector",
    "default_popup": "popup.html",
    "default_icon": "icon48.jpg"
  },
  "icons": {
    "48": "icon48.jpg",
    "128": "icon128.jpg"
  }
}